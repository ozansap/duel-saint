{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",
	"exclude": ["-planned"],

  "compilerOptions": {
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

		"outDir": "build",
    "baseUrl": "./",
    "paths": {
      "@utils/*": ["utils/*"],
      "@config": ["config.ts"],
    }
  }

}